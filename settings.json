// 将设置放入此文件中以覆盖默认设置
{
  // Vim 配置
  "scrolloff.scrolloff": 8,
  "vim.easymotion": true, // 几个插件
  // "vim.sneak": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(72,209,204,1.000)",
  "editor.lineNumbers": "on",
  // "vim.insertModeKeyBindings": [
  //   {
  //   }
  // ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["K"],
      "after": ["5", "g", "k"]
    },
    {
      "before": ["J"],
      "after": ["5", "g", "j"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<Enter>"],
      "after": ["v", "a", "f"]
    },
    {
      "before": ["<shift+tab>"],
      "after": ["g", "T"]
    },
    {
      "before": ["<tab>"],
      "after": ["g", "t"]
    },
    {
      "before": ["K"],
      "after": ["5", "g", "k"]
    },
    {
      "before": ["J"],
      "after": ["5", "g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": [":w"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": [":q"]
    },
    {
      "before": ["n"],
      "after": ["z", "z", "n"]
    },
    {
      "before": ["N"],
      "after": ["z", "z", "N"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["G"],
      "after": ["G", "z", "z"]
    },
    {
      "before": ["<leader>", "<Enter>"],
      "commands": [":nohl"]
    },
    // {
    //   "before": ["~"],
    //   "after": ["`"]
    // },
    // {
    //   "before": ["`"],
    //   "after": ["~"]
    // },

    {
      "before": ["<leader>", "v"],
      "after": ["<C-v>"]
    },

    // split!
    {
      "before": ["z", "l"],
      "commands": ["workbench.action.splitEditorRight"]
    },
    {
      "before": ["z", "h"],
      "commands": ["workbench.action.splitEditorLeft"]
    },
    {
      "before": ["z", "j"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["z", "k"],
      "commands": ["workbench.action.splitEditorUp"]
    },
    // change screen
    {
      "before": ["t", "n"],
      "commands": [":tabe"]
    },
    // jump windows
    {
      "before": ["<leader>", "l"],
      "after": ["<C-w>", "l"]
    },
    {
      "before": ["<leader>", "h"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<leader>", "k"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<leader>", "j"],
      "after": ["<C-w>", "j"]
    },
    // {
    // "before": ["K"],
    // "commands": ["lineBreakInsert"],
    // "silent": true
    // },
    // jump to terminal from editor
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.terminal.focus"]
    },
    // close the workbench(Terminal, ControlPanel)
    {
      "before": ["<leader>", "c", "t"],
      "commands": ["workbench.action.closePanel"]
    },
    // close the leftbench
    {
      "before": ["<leader>", "c", "h"],
      "commands": ["workbench.action.closeSidebar"]
    },
    // run code
    {
      "before": ["<leader>", "r", "c"],
      "commands": ["code-runner.run"]
    },
    // create a new file
    {
      "before": ["<leader>", "n", "f"],
      "commands": ["explorer.newFile"]
    },
    // run code analysis
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["C_Cpp.RunCodeAnalysisOnOpenFiles"]
    },
    // easymotion
    {
      "before": ["s"],
      "after": ["<leader>", "<leader>", "s"]
    },
    // formatting
    {
      "before": ["<leader>", "f", "m"],
      "commands": ["editor.action.formatDocument"]
    },
    // Rename Symbol
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-n>": false
  },
  "files.autoSave": "onFocusChange",
  "workbench.iconTheme": "vscode-icons",
  "editor.mouseWheelZoom": true,
  "code-runner.runInTerminal": true,
  "code-runner.saveFileBeforeRun": true,
  "vsicons.dontShowNewVersionMessage": true,
  "explorer.confirmDelete": false,
  "git.ignoreMissingGitWarning": true,
  "editor.accessibilitySupport": "off",
  "explorer.confirmDragAndDrop": false,
